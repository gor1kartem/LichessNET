<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageTags>lichess api</PackageTags>
        <Version>1.1.0</Version>
        <Description>A high-level wrapper for the Lichess API in C#.
            Implements all endpoints a normal application needs, and also accepts user tokens.
            Visit the GitHub Repo for more information.
        </Description>
        <RepositoryUrl>https://github.com/Rabergsel/LichessNET/tree/master</RepositoryUrl>
        <PackageProjectUrl>https://github.com/Rabergsel/LichessNET</PackageProjectUrl>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.0"/>
        <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.0"/>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="TokenBucket" Version="2.0.0"/>
        <PackageReference Include="vertical-spectreconsolelogger" Version="0.10.1-dev.20241119.33"/>
        <PackageReference Include="ZstdNet" Version="1.4.5"/>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Attributes\"/>
        <Folder Include="Entities\Interfaces\" />
    </ItemGroup>

</Project>
